<table class="table table-bordered table-striped">
  <%= render(@basket.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>

    <td class="total_cell"><%= @basket.total_price %></td>
  </tr>
</table>

<%= button_to(
  'Empty basket',
  @basket,
  method: :delete,
  confirm: 'Are you sure?',
  class: 'btn btn-danger'
) %>
