<table>
  <% @basket.line_items.each do |item| %>
    <tr>
      <td><%= item.quantity %> &times;</td>

      <td><%= item.product.title %></td>

      <td class="item_price"><%= item.total_price %></td>
    </tr>
  <% end %>
</table>

<%= button_to(
  'Empty basket',
  @basket,
  method: :delete,
  confirm: 'Are you sure?',
  class: 'btn btn-danger'
) %>
