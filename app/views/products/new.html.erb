<%= form_for(@product) do |f| %>
  <ol>
    <li><%= f.label :title %> <%= f.text_field :title %></li>

    <li><%= f.label :description %> <%= f.text_field :description %></li>

    <li><%= f.label :image_url %> <%= f.text_field :image_url %></li>

    <li><%= f.label :price %> <%= f.text_field :price %></li>

    <li><%= f.submit %></li>
  </ol>
<% end %>

<p><%= link_to('Back', products_path) %></p>
