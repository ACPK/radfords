<% content_for(:body_class, 'show-product') %>

<div class="image">
  <%= @product.image %>
</div>

<div class="information">
  <h2>
    <%= @product.title %>
  </h2>

  <p><%= @product.description %></p>

  <div class="price-line">
    <span class="price">
      <%= @product.price %>
    </span>

    <%= button_to(
      'Add to Basket',
      line_items_path(product_id: @product),
      class: 'btn btn-primary'
    ) %>
  </div>
</div>

<% if signed_in? %>
  <div class="form-actions">
    <ul>
      <li><%= link_to('Edit', edit_product_path(@product), class: 'btn') %></li>

      <li><%= link_to('Back', products_path, class: 'btn') %></li>

      <li><%= button_to(
        'Delete',
        @product,
        method: :delete,
        class: 'btn btn-danger'
      ) %></li>
    </ul>
  </div>
<% end %>
