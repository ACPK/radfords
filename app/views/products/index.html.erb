<table>
  <tr>
    <th>Title</th>

    <th>Description</th>

    <th>Image</th>

    <th>Price</th>

    <th>Actions</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>

      <td><%= product.description %></td>

      <td><%= image_tag(product.image_url) %></td>

      <td><%= product.price %></td>

      <td>
        <ul>
          <li><%= link_to 'Edit', edit_product_path(product) %></li>
        </ul>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Product', new_product_path %>
