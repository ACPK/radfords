<table>
  <tr>
    <th>Title</th>

    <th>Description</th>

    <th>Image</th>

    <th>Price</th>

    <% if signed_in? %>
      <th>Actions</th>
    <% end %>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>

      <td><%= product.description %></td>

      <td><%= image_tag(product.image_url) %></td>

      <td><%= product.price %></td>

      <% if signed_in? %>
        <td>
          <ul>
            <li><%= link_to 'Show', product_path(product) %></li>

            <li><%= link_to 'Edit', edit_product_path(product) %></li>

            <li><%= button_to 'Delete', product, method: :delete %></li>
          </ul>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<% if signed_in? %>
  <%= link_to 'New Product', new_product_path %>
<% end %>
