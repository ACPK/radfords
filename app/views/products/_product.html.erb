<%= content_tag('li', class: product.class_name(product_counter)) do %>
  <h3>
    <%= link_to(product.title, product_path(product)) %>
  </h3>

  <p><%= link_to(product.image, product_path(product)) %></p>

  <p><%= product.description %></p>

  <p><%= product.price %></p>

  <% if signed_in? %>
    <div class="actions">
      <ul>
        <li><%= link_to 'Edit', edit_product_path(product), class: 'btn' %></li>

        <li><%= button_to 'Delete', product, method: :delete, class: 'btn btn-danger' %></li>
      </ul>
    </div>
  <% end %>
<% end %>
