<%= content_tag('li', class: (product_counter + 1) % 3 == 0 ? 'last' : '') do %>
  <h3>
    <%= product.title %>
  </h3>

  <p><%= image_tag(product.image_url) %></p>

  <p><%= product.description %></p>

  <p><%= number_to_currency(product.price, unit: 'Â£') %></p>

  <% if signed_in? %>
    <ul>
      <li><%= link_to 'Show', product_path(product) %></li>

      <li><%= link_to 'Edit', edit_product_path(product) %></li>

      <li><%= button_to 'Delete', product, method: :delete %></li>
    </ul>
  <% end %>
<% end %>
