<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <meta name="description" content="Buy homemade jams and preserves online with Radfords of Somerford. Fantastic homemade jams and preserves made with local produce in the heart of Cheshire." />
  <%= render 'layouts/stylesheets' %>
</head>

<%= content_tag(:body, class: [content_for(:body_class), controller.controller_name]) do %>
  <div class="container">
    <% if signed_in? %>
      <div class="navbar">
        <div class="navbar-inner">
          <%= link_to('Radfords', root_path, class: 'brand') %>

          <ul class="nav">
            <%= content_tag :li, class: ('active' if controller.controller_name == 'products') do %>
              <%= link_to('Products', products_path) %>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <%= render 'layouts/header' %>
    <div class="main">
      <% flash.each do | key, value | %>
        <%= content_tag(:div, class: ['alert', "alert-#{key}"]) do %>
          <strong><%= t("#{key}_text") %>!</strong> <%= value %>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  </div>

  <%= javascript_include_tag(
    'application',
    'http://maps.googleapis.com/maps/api/js?sensor=false'
  ) %>
<% end %>
</html>
