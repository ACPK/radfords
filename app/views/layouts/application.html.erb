<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
  <%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
  <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
  <%= stylesheet_link_tag 'radfords', :media => 'screen' %>
</head>

<body>
  <div class="container">
    <div id="content-main" class="span-18 prepend-3 last">
      <div id="header" class=" span-18 last">
        <span id="image-logo"></span>
        <h1 id="title">Radfords of Somerford</h1>
      </div>
      <div id="navbar-holder" class="span-18 last">
        <ul id="navbar">
          <li><%= link_to "Home", '#' %></li>
          <li><%= link_to "Products", '#' %></li>
          <li><%= link_to "Where to buy", '#' %></li>
          <li><%= link_to "Contact us", '#' %></li>
        </ul>
      </div>
      <div id="roll" class="span-18 last">
        <%= yield %>
      </div>
      <div  id="footer" class="span-18 last">
        <span class="contact">Email: <a href="mailto:denise@radfordsofsomerford.co.uk">denise@radfordsofsomerford.co.uk</a></span>Site design: <a href="mailto:freon27@gmail.com">Freon Media</a>
      </div>
    </div>
  </div>
</body>
</html>