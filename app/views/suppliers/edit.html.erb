<h1>Edit supplier</h1>

<%= form_for @supplier do |f| %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :address %><br />
		<%= f.text_area :address %>
	</div>
	<div class="field">
		<%= f.label :website %><br />
		<%= f.text_field :website %>
	</div>
	<div class="field">
		<%= f.label :telephone_number %><br />
		<%= f.text_field :telephone_number %>
	</div>
	<div class="actions">
	 	<%= f.submit "Update" %>
	</div>
<% end %>